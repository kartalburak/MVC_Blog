@model Blog.Domain.Core.Uye

@{
    ViewBag.Title = "UyeGiris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Ajax çalışması için script dosyaları atılmalı projeye,yoksa manage nuget'dan ajax unobtrusive yukle*@
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@using (Ajax.BeginForm("UyeGiris", "Uye", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divSonuc" }, new { id = "formcss" }))
{
    <div class="container">
        <div class="alert-warning" role="alert">
            <h3 class="text-center">Üye Girişi</h3>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2 text-right">
                    <span class="form-control-static">Email</span>
                </div>
                <div class="col-md-6">
                    <input id="txtemail" name="email" type="text" class="form-control" placeholder="Email adresinizi giriniz..." />
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2 text-right">
                    <span class="form-control-static">Şifre</span>
                </div>
                <div class="col-md-6">
                    <input id="txtsifre" name="sifre" type="password" class="form-control" placeholder="Şifrenizi giriniz..." />
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2 text-right"></div>
                <div class="col-md-6">
                    <input id="btngiris" value="Giriş" type="submit" class="btn btn-success" />
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-2 text-right"></div>
                <div id="divSonuc" class="col-md-6 text-danger">

                </div>
                <div class="col-md-2"></div>
            </div>
        </div>

    </div>
}



